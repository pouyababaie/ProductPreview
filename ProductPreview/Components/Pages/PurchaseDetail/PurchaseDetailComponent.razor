<div class="container-fluid">
    <div class="row">
        <div class="col-6 d-flex justify-content-center align-items-center flex-column ">
            <div class="h-100 w-100" style="max-height:50vh; max-width:50vw;">
                <img src="/images/Buy.png" width="50%" height="100%" class="mx-auto d-block" />
            </div>

            <div class="mt-4">
                <div class="d-flex justify-content-between align-items-center">
                    <MudBadge></MudBadge>
                    <MudBadge></MudBadge>
                </div>

