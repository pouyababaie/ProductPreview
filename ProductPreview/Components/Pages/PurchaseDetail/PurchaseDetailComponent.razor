                <MudButton Color=Color.Primary Variant="Variant.Outlined" Class="w-100 mt-3">Print Receipt</MudButton>

            </div>
        </div>
        <div class="col-6 bg-muted d-flex justify-content-between align-items-center flex-column">
            <div style="max-height:25vh" class="h-100 text-center">
                <MudIcon Icon="@Icons.Material.Filled.ShoppingBasket" Size="Size.Medium" Class="w-100" />
